{{#partial "content"}}
    <div class="container row">
       <p>Squad:</p>
       <p>{{squad.content}}</p>
       <h5>Squad details:</h5>
        {{#if squad}}
            {{#if hero}}
                {{#each hero}}
                    <div class="card-body">
                        <h4 class="card-title">Squad name: {{squadName}}</h4>
                        <p class="card-text">Cause: {{cause}}</p>
                    <p class="card-text"><span class="label label-primary">Maximum Size: {{maxSize}}</span></p>
                    <a href="/squad">Squad</a>
                    <a href="#">Delete</a>
                    </div>
                {{/each}}
            {{else}}
                <div class="alert alert-danger">
                    <p>Your is not in any Squad</p>
                </div>
            {{/if}}
        {{/if}}
    </div>
{{/partial}}
{{> layout.hbs}}